{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"outDir": "lib",
		"rootDir": ".",
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitThis": true,
		"rewriteRelativeImportExtensions": true,
		"allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["types", "src", "plugins", "*.ts", "*.mts"],
	"exclude": ["lib"]
}
